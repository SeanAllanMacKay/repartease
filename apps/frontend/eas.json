{
  "cli": {
    "version": ">= 7.2.0"
  },
  "build": {
    "monorepo": {
      "ios": {
        "image": "latest"
      },
      "android": {
        "image": "latest"
      }
    },
    "development": {
      "extends": "monorepo",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "android": {
        "buildType": "apk"
      }
    },
    "staging": {
      "extends": "monorepo",
      "distribution": "internal",
      "channel": "staging"
    },
    "production": {
      "extends": "monorepo",
      "distribution": "store",
      "channel": "production"
    }
  }
}
