{
  "cli": {
    "version": ">= 7.2.0"
  },
  "build": {
    "monorepo": {
      "ios": {
        "image": "latest"
      },
      "android": {
        "image": "latest"
      }
    },
    "development": {
      "extends": "monorepo",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "android": {
        "buildType": "apk"
      }
    },
    "staging": {
      "extends": "monorepo",
      "distribution": "internal",
      "channel": "staging",
      "env": {
        "EXPO_PUBLIC_API_URL": "https://barnacle-prompt-preferably.ngrok-free.app"
      }
    },
    "production": {
      "extends": "monorepo",
      "distribution": "store",
      "channel": "production",
      "env": {
        "EXPO_PUBLIC_API_URL": "https://repartease-server-3bdaf1f61baf.herokuapp.com"
      }
    }
  }
}
