{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["./src/global.d.ts"],
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@routers*": ["./src/routers*"],
      "@actions*": ["./src/actions*"],
      "@services*": ["./src/services*"],
      "@database*": ["./src/database*"]
    }
  }
}
