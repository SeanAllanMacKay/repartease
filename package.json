{
  "name": "repartease_monorepo",
  "private": true,
  "scripts": {
    "build": "dotenv -e .env.production turbo build",
    "cd": "turbo build",
    "dev": "dotenv -e .env.development turbo run dev --concurrency=11",
    "start": "dotenv -e .env.production turbo run start --concurrency=11",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:frontend": "turbo build --filter=\"...{./apps/frontend}\""
  },
  "devDependencies": {
    "@repartease/eslint-config": "workspace:*",
    "@repartease/typescript-config": "workspace:*",
    "prettier": "^3.1.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "dependencies": {
    "dotenv-cli": "^7.3.0",
    "turbo": "latest"
  }
}
